<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorPrimary"
        android:orientation="vertical"
        tools:context=".PlayerActivity">

    <LinearLayout
            android:padding="3dp"
            android:layout_margin="3dp"
            android:layout_weight="9"
            android:layout_width="match_parent"
            android:layout_height="0dp">

        <LinearLayout
                android:padding="3dp"
                android:layout_margin="3dp"
                android:orientation="vertical"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent">

            <TextView
                    android:id="@+id/tvTeamName1"
                    android:hint="Team 1"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/colorWhite"
                    android:typeface="serif"
                    android:gravity="center"
                    android:padding="3dp"
                    android:layout_margin="3dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            <EditText
                    android:id="@+id/etPlayer1"
                    android:hint="Player Name"
                    android:textColor="@color/colorWhite"
                    android:textColorHint="@color/colorPrimaryDark"
                    android:layout_margin="3dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                <EditText
                        android:id="@+id/etTNum1"
                        android:hint="T No."
                        android:inputType="number"
                        android:textColor="@color/colorWhite"
                        android:textColorHint="@color/colorPrimaryDark"
                        android:layout_margin="3dp"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"/>

                <android.support.design.widget.FloatingActionButton
                        android:id="@+id/fabAddPlayer1"
                        android:src="@drawable/add"
                        app:fabSize="mini"
                        android:layout_margin="3dp"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"/>

            </LinearLayout>

            <android.support.v7.widget.RecyclerView
                    android:id="@+id/rvListPlayers1"
                    android:padding="3dp"
                    android:layout_margin="3dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

            </android.support.v7.widget.RecyclerView>

        </LinearLayout>

        <LinearLayout
                android:padding="3dp"
                android:layout_margin="3dp"
                android:orientation="vertical"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent">

            <TextView
                    android:id="@+id/tvTeamName2"
                    android:hint="Team 2"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/colorWhite"
                    android:typeface="serif"
                    android:gravity="center"
                    android:padding="3dp"
                    android:layout_margin="3dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />


            <EditText
                    android:id="@+id/etPlayer2"
                    android:hint="Player Name"
                    android:textColor="@color/colorWhite"
                    android:textColorHint="@color/colorPrimaryDark"
                    android:layout_margin="3dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                <EditText
                        android:id="@+id/etTNum2"
                        android:hint="T No."
                        android:inputType="number"
                        android:textColor="@color/colorWhite"
                        android:textColorHint="@color/colorPrimaryDark"
                        android:layout_margin="3dp"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"/>

                <android.support.design.widget.FloatingActionButton
                        android:id="@+id/fabAddPlayer2"
                        android:src="@drawable/add"
                        app:fabSize="mini"
                        android:layout_margin="3dp"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"/>

            </LinearLayout>

            <android.support.v7.widget.RecyclerView
                    android:id="@+id/rvListPlayers2"
                    android:padding="3dp"
                    android:layout_margin="3dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

            </android.support.v7.widget.RecyclerView>

        </LinearLayout>


    </LinearLayout>

    <Button
            android:id="@+id/btnLetsPlay"
            android:text="Lets Play"
            android:textSize="16sp"
            android:textStyle="bold"
            android:typeface="monospace"
            android:padding="10dp"
            android:layout_margin="10dp"
            android:textColor="@color/colorWhite"
            android:background="@drawable/button_outline"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0dp"/>

</LinearLayout>