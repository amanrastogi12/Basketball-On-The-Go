<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorPrimary"
        tools:context=".GameActivity">

    <LinearLayout
            android:orientation="vertical"
            android:layout_weight="1"
            android:padding="3dp"
            android:layout_margin="3dp"
            android:layout_width="0dp"
            android:layout_height="match_parent">

        <TextView
                android:id="@+id/tvName1"
                android:hint="Team 1"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@color/colorWhite"
                android:typeface="serif"
                android:gravity="center"
                android:padding="3dp"
                android:layout_margin="3dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        <android.support.v7.widget.RecyclerView
                android:id="@+id/rvPlayers1"
                android:padding="3dp"
                android:layout_margin="3dp"
                android:layout_weight="2"
                android:layout_width="match_parent"
                android:layout_height="0dp">

        </android.support.v7.widget.RecyclerView>

        <TextView
                android:id="@+id/tvScore1"
                android:text="0"
                android:textSize="30sp"
                android:textStyle="bold"
                android:textColor="@color/colorWhite"
                android:typeface="serif"
                android:layout_gravity="center"
                android:background="@drawable/list_outline"
                android:gravity="center"
                android:padding="5dp"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:layout_width="90dp"
                android:layout_height="0dp"/>

    </LinearLayout>


    <ScrollView
            android:padding="3dp"
            android:layout_margin="3dp"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent">

        <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                <TextView
                        android:id="@+id/tvTimer1"
                        android:text="40:00"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:background="@drawable/list_outline"
                        android:textColor="@color/colorWhite"
                        android:typeface="serif"
                        android:gravity="center"
                        android:padding="3dp"
                        android:layout_margin="3dp"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"/>

                <TextView
                        android:id="@+id/tvTimer2"
                        android:text="24"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:background="@drawable/list_outline"
                        android:textColor="@color/colorWhite"
                        android:typeface="serif"
                        android:gravity="center"
                        android:padding="3dp"
                        android:layout_margin="3dp"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"/>

            </LinearLayout>

            <include
                    layout="@layout/button_timer" />

            <TextView
                    android:text="Fouls"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:typeface="serif"
                    android:textColor="@color/colorWhite"
                    android:gravity="center"
                    android:padding="3dp"
                    android:layout_margin="3dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

            <include
                    layout="@layout/button_foul" />

            <TextView
                    android:text="Time Outs"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:typeface="serif"
                    android:textColor="@color/colorWhite"
                    android:gravity="center"
                    android:padding="3dp"
                    android:layout_margin="3dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

            <include
                    layout="@layout/button_timeout" />

            <Button
                    android:id="@+id/btnNewGame"
                    android:text="New Game"
                    android:textStyle="bold"
                    android:typeface="serif"
                    android:textColor="@color/colorWhite"
                    android:background="@drawable/button_outline"
                    android:padding="3dp"
                    android:layout_margin="3dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

            <Button
                    android:id="@+id/btnResetGame"
                    android:text="Reset Game"
                    android:textStyle="bold"
                    android:typeface="serif"
                    android:textColor="@color/colorWhite"
                    android:background="@drawable/button_outline"
                    android:padding="3dp"
                    android:layout_margin="3dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

            <Button
                    android:id="@+id/btnFinishGame"
                    android:text="Finish Game"
                    android:textStyle="bold"
                    android:typeface="serif"
                    android:textColor="@color/colorWhite"
                    android:background="@drawable/button_outline"
                    android:padding="3dp"
                    android:layout_margin="3dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

        </LinearLayout>

    </ScrollView>

    <LinearLayout
            android:orientation="vertical"
            android:layout_weight="1"
            android:padding="3dp"
            android:layout_margin="3dp"
            android:layout_width="0dp"
            android:layout_height="match_parent">

        <TextView
                android:id="@+id/tvName2"
                android:hint="Team 2"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@color/colorWhite"
                android:typeface="serif"
                android:gravity="center"
                android:padding="3dp"
                android:layout_margin="3dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        <android.support.v7.widget.RecyclerView
                android:id="@+id/rvPlayers2"
                android:padding="3dp"
                android:layout_margin="3dp"
                android:layout_weight="2"
                android:layout_width="match_parent"
                android:layout_height="0dp">

        </android.support.v7.widget.RecyclerView>

        <TextView
                android:id="@+id/tvScore2"
                android:text="0"
                android:textSize="30sp"
                android:textStyle="bold"
                android:textColor="@color/colorWhite"
                android:typeface="serif"
                android:gravity="center"
                android:layout_gravity="center"
                android:background="@drawable/list_outline"
                android:padding="5dp"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:layout_width="90dp"
                android:layout_height="0dp"/>

    </LinearLayout>

</LinearLayout>